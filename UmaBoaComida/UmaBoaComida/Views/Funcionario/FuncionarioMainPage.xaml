<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UmaBoaComida.Views.Funcionario.FuncionarioMainPage"
             BackgroundColor="#EDF2F4">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Painel do Funcionário" 
                   FontSize="28" 
                   TextColor="#2B2D42" 
                   HorizontalOptions="Center"/>

            <Button x:Name="IniciarExpedienteButton" Text="Iniciar Expediente" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="EncerrarExpedienteButton" Text="Encerrar Expediente" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="GerarRelatorioButton" Text="Gerar Relatório Diário" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="HistoricoDiaButton" Text="Visualizar Histórico do Dia" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="HistoricoCompletoButton" Text="Visualizar Histórico Completo" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="VoltarButton" Text="Voltar" BackgroundColor="#8D99AE" TextColor="White" CornerRadius="10"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

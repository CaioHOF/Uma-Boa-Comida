<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UmaBoaComida.Views.Atendente.AtendenteMainPage"
             BackgroundColor="#EDF2F4">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Painel do Atendente" 
                   FontSize="28" 
                   TextColor="#2B2D42" 
                   HorizontalOptions="Center"/>

            <Button x:Name="CriarPedidoButton" Text="Criar Pedido" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="AdicionarItensButton" Text="Adicionar Itens" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="GerenciarEstoqueButton" Text="Gerenciar Estoque" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="EntregarPedidosButton" Text="Entregar Pedidos" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="VoltarButton" Text="Voltar" BackgroundColor="#8D99AE" TextColor="White" CornerRadius="10"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

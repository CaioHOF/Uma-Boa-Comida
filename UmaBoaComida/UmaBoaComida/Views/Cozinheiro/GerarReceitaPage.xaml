<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UmaBoaComida.Views.Cozinheiro.GerarReceitaPage"
             Title="Gerar Receita"
             BackgroundColor="#EDF2F4">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Nova Receita"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#2B2D42"
                   HorizontalOptions="Center" />

            <Entry x:Name="NomeEntry"
                   Placeholder="Nome da receita"
                   BackgroundColor="White"
                   TextColor="#2B2D42" />

            <Editor x:Name="DescricaoEditor"
                    Placeholder="Descrição da receita"
                    AutoSize="TextChanges"
                    BackgroundColor="White"
                    TextColor="#2B2D42" />

            <Entry x:Name="PrecoEntry"
                   Placeholder="Preço (ex: 25.50)"
                   Keyboard="Numeric"
                   BackgroundColor="White"
                   TextColor="#2B2D42" />

            <Entry x:Name="TempoPreparoEntry"
                   Placeholder="Tempo de preparo (min)"
                   Keyboard="Numeric"
                   BackgroundColor="White"
                   TextColor="#2B2D42" />

            <Button x:Name="SalvarButton"
                    Text="Gerar Receita"
                    BackgroundColor="#2B2D42"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50" />

            <Button x:Name="VoltarButton"
                    Text="Voltar"
                    BackgroundColor="#8D99AE"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UmaBoaComida.Views.Admin.AdminMainPage"
             BackgroundColor="#EDF2F4">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Painel do Administrador" 
                   FontSize="28" 
                   HorizontalOptions="Center" 
                   TextColor="#2B2D42"/>

            <Button x:Name="ConfigButton" Text="Configurações" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="VisualizarPedidosButton" Text="Visualizar pedidos" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="VisualizarEstoqueButton" Text="Visualizar Estoque" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="VisualizarReceitasButton" Text="Visualizar Receitas" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="VisualizarHistoricosButton" Text="Visualizar Históricos" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="VisualizarFuncionariosButton" Text="Visualizar Funcionarios" BackgroundColor="#2B2D42" TextColor="White" CornerRadius="10"/>
            <Button x:Name="VoltarButton" Text="Voltar" BackgroundColor="#8D99AE" TextColor="White" CornerRadius="10"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
